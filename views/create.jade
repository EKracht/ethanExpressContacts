extends ./layout.jade

block content
  .container
    - var properties = ['name', 'email', 'phone', 'food']
    .row
      h1= title
    .row
      each prop in properties
        label #{prop.toUpperCase()}:
        input(id= prop)
      button.btn#submit Add
    .row
      table.table.table-hover
        thead
          tr
            each prop in properties
              th= prop
            th: th
        tbody#contactList
          each item, index in items
            tr
              each prop in properties
                td(class= prop, id= prop)= items[index][prop]
              td.edit.text-center
                i.fa.fa-pencil-square-o.fa-lg(data-target='#myModal', data-toggle='modal')
              td.delete.text-center
                i.fa.fa-trash-o.fa-lg

      #myModal.modal.fade(role='dialog')
        .modal-dialog.modal-lg
          .modal-content
            .modal-body
              input#editName(type='text', placeholder='Name')
              br
              input#editEmail(type='text', placeholder='Email')
              br
              input#editPhone(type='number', placeholder='Phone')
              br
              input#editFood(type='text', placeholder='Food')
              br
              br
              p.msg(align='center')
              br
              button#saveEdit.btn.btn-primary.btn-lg.center-block.submit(type='button', data-dismiss='modal') Save Contact

